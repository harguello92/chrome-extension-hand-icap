{
  "name": "Google meet hand-icap",
  "version": "1.0.0",
  "description": "This is a simple Chrome extension that disables the 'hands up' button in popular Google Meets.",
  "manifest_version": 3,
  "author": "harguello92",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "action":{
      "default_popup": "popup/popup.html",
      "default_title": "Google meet hand-icap"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "js": ["scripts/content-script.js"],
      "matches": ["https://meet.google.com/*"]
    }
  ],
  "icons": {
    "32": "icons/icon-32.png",
    "128": "icons/icon-128.png"
  }
}
